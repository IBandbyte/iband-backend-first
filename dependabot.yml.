# .github/dependabot.yml
version: 2
updates:
  # âœ… Enable security-only updates (recommended)
  - package-ecosystem: "npm"
    directory: "/"
    schedule:
      interval: "monthly"
    open-pull-requests-limit: 5
    # Only create PRs for security vulnerabilities
    allow:
      - dependency-type: "all"
    # Dependabot will only open PRs when a security advisory applies
    security-updates-only: true

