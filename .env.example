# .env.example — copy to .env (do NOT commit real credentials)

# Primary Mongo connection string
# Example (Atlas):
# MONGO_URI="mongodb+srv://user:pass@cluster0.xxx.mongodb.net/iband?retryWrites=true&w=majority"
MONGO_URI=""

# Optional alternates (used if MONGO_URI is empty)
# MONGODB_URI=""
# MONGO=""

# Port — Render uses 10000 by default
PORT=10000

# NODE_ENV can be "production" on Render
# NODE_ENV=production